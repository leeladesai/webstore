{
	"info": {
		"_postman_id": "fastapi-webstore-collection",
		"name": "FastAPI Webstore API",
		"description": "Postman collection for Orders & Inventory Microservice",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8000",
			"type": "string"
		},
		{
			"key": "webhook_secret",
			"value": "default-secret-change-in-production",
			"type": "string"
		},
		{
			"key": "product_id",
			"value": "",
			"type": "string"
		},
		{
			"key": "order_id",
			"value": "",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Products",
			"item": [
				{
					"name": "Create Product",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"sku\": \"PROD-001\",\n    \"name\": \"Laptop\",\n    \"price\": 999.99,\n    \"stock\": 50\n}"
						},
						"url": {
							"raw": "{{base_url}}/products/",
							"host": ["{{base_url}}"],
							"path": ["products", ""]
						}
					},
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    var jsonData = pm.response.json();",
									"    pm.collectionVariables.set(\"product_id\", jsonData.id);",
									"}"
								]
							}
						}
					]
				},
				{
					"name": "List Products",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/products/",
							"host": ["{{base_url}}"],
							"path": ["products", ""]
						}
					}
				},
				{
					"name": "Get Product",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/products/{{product_id}}",
							"host": ["{{base_url}}"],
							"path": ["products", "{{product_id}}"]
						}
					}
				},
				{
					"name": "Update Product",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"price\": 899.99,\n    \"stock\": 45\n}"
						},
						"url": {
							"raw": "{{base_url}}/products/{{product_id}}",
							"host": ["{{base_url}}"],
							"path": ["products", "{{product_id}}"]
						}
					}
				},
				{
					"name": "Delete Product",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{base_url}}/products/{{product_id}}",
							"host": ["{{base_url}}"],
							"path": ["products", "{{product_id}}"]
						}
					}
				}
			]
		},
		{
			"name": "Orders",
			"item": [
				{
					"name": "Create Order",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"product_id\": {{product_id}},\n    \"quantity\": 2\n}"
						},
						"url": {
							"raw": "{{base_url}}/orders/",
							"host": ["{{base_url}}"],
							"path": ["orders", ""]
						}
					},
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    var jsonData = pm.response.json();",
									"    pm.collectionVariables.set(\"order_id\", jsonData.id);",
									"}"
								]
							}
						}
					]
				},
				{
					"name": "Get Order",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/orders/{{order_id}}",
							"host": ["{{base_url}}"],
							"path": ["orders", "{{order_id}}"]
						}
					}
				},
				{
					"name": "List Orders",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/orders/",
							"host": ["{{base_url}}"],
							"path": ["orders", ""]
						}
					}
				},
				{
					"name": "Update Order Status",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"status\": \"PAID\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/orders/{{order_id}}",
							"host": ["{{base_url}}"],
							"path": ["orders", "{{order_id}}"]
						}
					}
				},
				{
					"name": "Cancel Order",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{base_url}}/orders/{{order_id}}",
							"host": ["{{base_url}}"],
							"path": ["orders", "{{order_id}}"]
						}
					}
				}
			]
		},
		{
			"name": "Webhooks",
			"item": [
				{
					"name": "Payment Webhook",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "X-Webhook-Signature",
								"value": "{{webhook_signature}}",
								"description": "HMAC-SHA256 signature (pre-request script generates this)"
							},
							{
								"key": "X-Event-Id",
								"value": "{{$guid}}",
								"description": "Unique event ID for replay protection"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"event\": \"payment.succeeded\",\n    \"order_id\": {{order_id}},\n    \"amount\": 1999.98,\n    \"currency\": \"USD\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/webhooks/payment",
							"host": ["{{base_url}}"],
							"path": ["webhooks", "payment"]
						}
					},
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"// Generate HMAC-SHA256 signature",
									"const crypto = require('crypto');",
									"const body = pm.request.body.raw;",
									"const secret = pm.collectionVariables.get('webhook_secret');",
									"const signature = crypto.createHmac('sha256', secret).update(body).digest('hex');",
									"pm.collectionVariables.set('webhook_signature', signature);"
								]
							}
						}
					]
				}
			]
		}
	]
}

